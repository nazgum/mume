#var {leader} {none}

#alias {leader} {
  #if { "%0" == "" } {
    #echo {You must specify a leader...}
  };
  #else {
    #var {leader} {%0};
    #echo {leader set to: <049>$leader<099>}
  };;
}

#action {^%+ joins $leader's fight.$} { assist }

#action {^$leader dismounts} {lead}
#action {^$leader picks up} {ride}
#action {^$leader grabs on} {ride}
