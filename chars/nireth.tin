#alias {g} {
  #if { "%0" == "" } {
    cast 'silence' $target; #echo {cast 'silence' $target}
  };
  #else {
    cast 'silence' %0; #echo {cast 'silence' %0}
  };
}

#alias {h} {
  #if { "%0" == "" } {
    cast 'lightning bolt' $target; #echo {cast 'lightning bolt' $target}
  };
  #else {
    cast 'lightning bolt' %0; #echo {cast 'lightning bolt' %0}
  };
}

#alias {b} {
  #if { "%0" == "" } {
    back $target; #echo {back $target}
  };
  #else {
    back %0; #echo {back %0}
  };
}


#var {bag} {sable}

#alias {rec} {get all.bolt all.corpse; get all.bolt; put all.bolt case}
#alias {reload} {get all.bolt $bag; put all.bolt case}

#alias {^.$} {shoot $target; #echo {shoot $target}}
#alias {pipe} {get pipe $bag; wield pipe; rest; smoke pipe; st; wield pweapon; put pipe $bag }
#alias {remp} {remove ring; get emerald-ring $bag; wear emerald-ring; put ring $bag; use emerald-ring}
#alias {cc} {remove ring; get garnet-ring $bag; wear garnet-ring; put ring $bag; use emerald-ring}
